// Notes: this file's should match what's used in the .shield file's
// Since this is matrix wiring, we need a matrix transform macro, hence the "include" line.

#include <dt-bindings/zmk/matrix_transform.h>

/ {
	chosen {
		zmk,kscan = &default_kscan;
		zmk,matrix_transform = &default_transform;
	};

	default_transform: matrix_transform {
		compatible = "zmk,matrix-transform";
		columns = <2>;
		rows = <3>;
// | K1  | K2  |
// | K3  | K4  |
// | K5 |
//             |
		map = <
RC(0,0) RC(0,1)
RC(1,0) RC(1,1)
RC(2,0)
		>;
	};

	default_kscan: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		label = "KSCAN"; // can name it whatever

		diode-direction = "col2row";
		row-gpios
			= <&gpio0 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>     //Row0
			, <&gpio0 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>     //Row1
			, <&gpio0 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>     //Row2
			;

		col-gpios
			= <&gpio0 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>     //Col0
			, <&gpio0 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>     //Col1
			;
		
	};
   
};
